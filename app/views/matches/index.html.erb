<p id="notice" class="text-center"><%= notice %></p>

<div class="container">
    <div class="d-inline-block">
        <h1>Matches</h1>
    </div>
    <br/>
    <div class="d-inline-block float-left" style="margin-top: 10px;">
        <%= link_to 'Add Match', new_match_path, :class => "btn btn-primary btn-sm" %>
    </div>

    <table class="table table-stripped table-hover">
      <thead>
        <tr>
          <th>First team</th>
          <th>Second team</th>
          <th>Result</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @matches.each do |match| %>
          <tr>
            <td>
              <% if match.team_one != nil %>
                <%= link_to match.team_one.name, match.team_one%>
              <% else %>
                <i>Team does not exist</i>
              <% end %>
            </td>
            <td>
              <% if match.team_two != nil %>
                <%= link_to match.team_one.name, match.team_one%>
              <% else %>
                <i>Team does not exist</i>
              <% end %>
            </td>
            <td><%= match.result %></td>
            <td><%= match.date %></td>
            <td>
              <div class="d-inline-block float-right">
                <%= link_to 'Show', match , :class => "btn btn-warning btn-sm" %>
                <%= link_to 'Edit', edit_match_path(match), :class => "btn btn-success btn-sm" %>
                <%= link_to 'Delete', match, method: :delete, data: { confirm: 'Are you sure you want to delete this match?' }, :class => "btn btn-danger btn-sm" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>
